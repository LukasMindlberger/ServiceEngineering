<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jku.serviceengineering.androidblogservice.PostActivity">

    <Button
        android:text="Submit Post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitBtn"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/titleField"
        android:background="@drawable/input_outline"
        android:padding="15dp"
        android:hint="Post Title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/descField"
        android:background="@drawable/input_outline"
        android:padding="15dp"
        android:hint="Post Content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/titleField"
        android:layout_alignParentStart="true" />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/postGroup"
        android:background="@drawable/input_outline"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:layout_below="@+id/descField"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:text="Group:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_alignTop="@+id/postGroup"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/postGroup"
        android:paddingRight="10dp" />


</RelativeLayout>
